{% extends 'base.html.twig' %}

{% block title %}Sale index{% endblock %}

{% block body %}
    <h1>Sale index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pavadinimas</th>
                <th>Miestas</th>
                <th>Gatve</th>
                <th>NamoNr</th>
                <th>DirbaNuo</th>
                <th>DirbaIki</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sale in sales %}
            <tr>
                <td>{{ sale.id }}</td>
                <td>{{ sale.pavadinimas }}</td>
                <td>{{ sale.miestas }}</td>
                <td>{{ sale.gatve }}</td>
                <td>{{ sale.namoNr }}</td>
                <td>{{ sale.dirbaNuo ? sale.dirbaNuo|date('H:i') : '' }}</td>
                <td>{{ sale.dirbaIki ? sale.dirbaIki|date('H:i') : '' }}</td>
                <td>
                    <a href="{{ path('sale_show', {'id': sale.id}) }}">show</a>
                    <a href="{{ path('sale_edit', {'id': sale.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sale_new') }}">Create new</a>
{% endblock %}
